@model ETrade.Ui.Models.ViewModels.UsersModel
<div class="row">
    <div class="col-md-5">
        <h4>Register</h4>
        <hr />
        <form method="post">
            <p>@Model.Msg</p>
            <div class="mb-3 row">

                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" name="Users.Mail" class="form-control-plaintext" id="staticEmail" placeholder="mail@example.com">
                </div>
            </div>

            <div class="mb-3 row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" name="Users.Password" class="form-control" id="inputPassword">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputSt" class="col-sm-2 col-form-label">Street</label>
                <div class="col-sm-10">
                    <input type="text" name="Users.Street" class="form-control" id="inputSt">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputAv" class="col-sm-2 col-form-label">Avenue</label>
                <div class="col-sm-10">
                    <input type="text" name="Users.Avenue" class="form-control" id="inputAv">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputNo" class="col-sm-2 col-form-label">No</label>
                <div class="col-sm-10">
                    <input type="text" name="Users.No" class="form-control" id="inputNo">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputNo" class="col-sm-2 col-form-label">Ad Soyad</label>
                <div class="col-sm-10">
                    <input type="text" name="Users.EntityName" class="form-control" >
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">County</label>
                <select class="form-control" asp-for="@Model.Users.CountyId">
                    @foreach (var item in Model.Counties)
                    {
                        <option value="@item.Id">@item.Description</option>
                    }
                    
                </select>

            </div>
            <input type="submit" value="Ok" />
        </form>
    </div>
</div>

